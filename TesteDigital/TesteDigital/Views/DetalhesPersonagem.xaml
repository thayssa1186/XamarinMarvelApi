<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TesteDigital.DetalhesPersonagem" Title="Teste Digital Pages">

  <ContentPage.Content>
    <StackLayout VerticalOptions="StartAndExpand">
      <Image x:Name="Image" Source="{Binding Path=ImageURL}"  Aspect="AspectFill"  HeightRequest ="75" WidthRequest="75" />
      <Label Text="Name:" />
      <Entry x:Name="nameEntry" Text="{Binding Path=name}"/>
      <Label Text="Descrição:" />
      <Entry x:Name="DescriptionEntry" Text="{Binding Path=description}" />
      <Label Text="Faciculos:" />
      <ListView x:Name="listView" ItemsSource="{Binding faciculos}">
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout Padding="20,0,0,0" HorizontalOptions="StartAndExpand" Orientation="Horizontal">
                <Image x:Name="Image" Source="{Binding Path=ImageURL}" Aspect="AspectFill"  HeightRequest ="48" WidthRequest="48"/>
                <Label Text="{Binding name}" VerticalTextAlignment="Center" />
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
       <Button Text="Voltar" Clicked="OnVoltar" />
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>